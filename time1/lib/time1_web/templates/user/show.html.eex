<h1>Show User</h1>

<ul>

  <li>
    <strong>UserName:</strong>
    <%= @user.username %>
  </li>

  <li>
    <strong>Name:</strong>
    <%= @user.name %>
  </li>

  <li>
    <strong>Role:</strong>
    <%= @user.role %>
  </li>

  <li>
    <strong>Manager:</strong>
    <%= @user.manager %>
  </li>

</ul>

<span><%= link "Edit", to: Routes.user_path(@conn, :edit, @user) %></span>
<span><%= link "See All", to: Routes.user_path(@conn, :index) %></span>
